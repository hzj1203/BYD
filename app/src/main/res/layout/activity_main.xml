<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="比亚迪自动控车"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 状态信息 -->
    <LinearLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态信息"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_service_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务状态: 未知"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_bluetooth_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝牙状态: 未知"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_connected_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接设备: 无"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_signal_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信号强度: --"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_last_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最后操作: 无"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <!-- 控制按钮 -->
    <LinearLayout
        android:id="@+id/control_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/status_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手动控制"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btn_unlock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="解锁车辆"
                android:backgroundTint="@android:color/holo_green_light"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_lock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上锁车辆"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_toggle_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启动服务"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- 设置按钮 -->
    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>